{{#each info}}

    <div class="party-component">
        <div class="party-component__main">
            <div class="party-component__overview">
                <div class="party-component__name font-yellow">
                    {{this.name}}
                </div>
                <div class="party-component__date font-white">
                    ({{ dateFixer this.date}})
                </div>
            </div>
            <div class="party-component__info">
                <div class="party-component__info--start">
                    Start: <span class="font-white"> godz: {{this.time}}</span>
                </div>
                <div class="party-component__info--place">
                    Miejsce: <span class="font-white"> {{this.place}}</span>
                </div>
            </div>
            <div class="party-component__box-image">
                <img src="/assets/images/party-img.jpg" class="party-component__image" alt="image of party">
            </div>
            <div class="party-component__organizer">
                <div class=".party-component__organizer-label font-yellow">
                    Organizator:
                </div>
                <div class="party-component__organizer-stars">
                    <div class="party-component__organizer-name font-red">{{this.organizer}}</div>
                    <img class="party-component__organizer-image" src="/assets/images/4-gwiazdki.png" alt="score (4 stars)">
                </div>
            </div>
        </div>
        <div class="party-component__box-button">
            <div class="party-component__button party-component__button--follow">
                <a href="/events/add-follower/{{this._id}}"><i class="fas fa-star"></i> Obserwuj</a>
            </div>
            <div class="party-component__button party-component__button--more-info">
                <a href="/events/get-event-id/{{this._id}}"><i class="fas fa-info-circle"></i> WiÄ™cej info...
                </a>
            </div>
        </div>
    </div>

{{/each}}

