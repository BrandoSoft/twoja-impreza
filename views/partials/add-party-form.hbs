<form action="/events/add-to-db" method="post" class="form-home">

    <div id="checkbox-list" class="form-home__checboxcontainer" style="display: flex; flex-direction: row">

        <div>
            <div class="form-group">
                <label for="name">Nazwa imprezy</label>
                <input type="text" name="name" id="name">
            </div>
            <div class="form-group">
                <label for="description">Opis Imprezy</label>
                <textarea name="description" id="description" cols="60" rows="5"></textarea>
            </div>
            <div class="form-group">
                <label for="date">Data</label>
                <input type="date" name="date" id="date">
            </div>
            <div class="form-group">
                <label for="time">Start Imprezy</label>
                <input type="time" name="time" id="time">
            </div>
            <div class="form-group">
                <label for="place">Miejsce</label>
                <input type="text" name="place" id="place">
            </div>
            <div class="form-group">
                <label for="organizer">Organizator</label>
                <input type="text" name="organizer" id="organizer">
            </div>
        </div>
        <div>
            <p>Kategorie Wiek:</p>
            {{#each age}}
                <div class="form-home__checkbox-category">
                    <input type="checkbox" class="form-home__checkbox" id="checkbox-{{this}}" name="{{this}}">
                    <label class="form-home__label" for="checkbox-{{this}}">{{this}}</label>
                </div>
            {{/each}}
            <p>Kategorie Typ:</p>
            {{#each category}}
                <div class="form-home__checkbox-category">
                    <input type="checkbox" class="form-home__checkbox" id="checkbox-{{this}}" name="{{this}}">
                    <label class="form-home__label" for="checkbox-{{this}}">{{this}}</label>
                </div>
            {{/each}}
        </div>
    </div>
    <button class="form-home__submit" type="submit">Wy≈õlij</button>
</form>