<div class="container">
    <div class="header">
        {{> nav}}
        {{> logo-image}}
        {{> header-bar headerTitle='Dodaj og≈Çoszenie'}}
    </div>
    <div class="main-section">
        <form action="/add/add-event-to-db" method="post" class="add-event-form">
            <div class="form-group-info">
                <div class="form-group">
                    <label for="name">Nazwa imprezy</label>
                    <input type="text" name="name" id="name">
                </div>
                <div class="form-group">
                    <label for="description">Opis Imprezy</label>
                    <textarea name="description" id="description" cols="60" rows="5"></textarea>
                </div>
            </div>
            <div class="form-group-date">
                <div class="form-group">
                    <label for="date">Data</label>
                    <input type="date" name="date" id="date">
                </div>
                <div class="form-group">
                    <label for="time">Start Imprezy</label>
                    <input type="time" name="time" id="time">
                </div>
            </div>
            <div class="form-group-place">
                <div class="form-group">
                    <label for="place">Miejsce</label>
                    <input type="text" name="place" id="place">
                </div>
                <div class="form-group">
                    <label for="organizer">Organizator</label>
                    <input type="text" name="organizer" id="organizer">
                </div>
            </div>
            <input type="submit" value="Dodaj impreze">
        </form>
    </div>
    <div class="footer">
        {{> footer}}
    </div>
</div>
